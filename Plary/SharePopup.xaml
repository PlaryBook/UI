<UserControl x:Name="userControl" x:Class="Plary.SharePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Plary"
             mc:Ignorable="d" 
             d:DesignHeight="387" d:DesignWidth="506">
    <Grid>
        <Rectangle x:Name="SharePopupCard" Fill="#FFBDB6AE" RadiusX="30" RadiusY="30" StrokeThickness="0" Margin="0,0,6,4.589"/>
        <TextBlock x:Name="ShareText" TextWrapping="Wrap" FontSize="24" TextAlignment="Center" Margin="16.798,106.96,21.81,58.937"><Run Text="Share this book!"/><LineBreak/><Run/><LineBreak/><Run Text="&lt;FB icon&gt; "/><Run Text="&lt;Email icon&gt;"/></TextBlock>
        <Button Content="Button" HorizontalAlignment="Left" Margin="421.19,12,0,0" Style="{DynamicResource CloseButton}" VerticalAlignment="Top" Width="63" Height="63"/>

    </Grid>
</UserControl>
